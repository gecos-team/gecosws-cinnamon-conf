glib-compile-schemas /usr/share/glib-2.0/schemas/

# There are two yelp icons: one from "yelp" package and another from "mint-user-guide-cinnamon"
# Just remove one of them
rm /usr/share/applications/yelp.desktop

# Since we have no GECOS help at this moment, just use Mint help as default
ln -s /usr/share/help/C/linuxmint /usr/share/help/C/ubuntu-help

# ImageMagick package adds two icons that poitns to the same application
# and these applications can't start because they need the terminal.
# Also this application is not translated into Spanish.
rm /usr/share/applications/display-im6.desktop
rm /usr/share/applications/display-im6.q16.desktop
